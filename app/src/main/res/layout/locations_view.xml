<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:id="@+id/locations_commute_info_view"
             android:background="@color/ltgray"
             android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
            android:scrollbars="vertical"
            android:id="@+id/map_info_recycler_view"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mini_tool_bar_size">

        <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView android:layout_width="match_parent"
                      android:background="@color/show_list_bar_color"
                      android:layout_height="match_parent"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/show_hide_list"
                    android:padding="5dp"
                    android:layout_gravity="start|center_vertical"
                    android:text="Show List"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/number_of_addresses"
                    android:layout_gravity="end|center_vertical"
                    android:padding="5dp"
                    android:text="12 addresses"/>
        </android.support.v7.widget.CardView>


    </FrameLayout>
</FrameLayout>
