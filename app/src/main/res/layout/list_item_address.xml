<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/list_item_show_on_map"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_alignParentEnd="true"
            android:enabled="true"
            android:focusable="false"
            android:padding="8dp"
            app:buttonTint="@color/theme_primary"/>

    <TextView
            android:id="@+id/list_item_title_of_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/list_item_show_on_map"
            android:textStyle="bold"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:textSize="20sp"
            android:text="Address title"/>

    <TextView
            android:id="@+id/list_item_streetTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/list_item_show_on_map"
            android:layout_below="@+id/list_item_title_of_address"
            android:textStyle="bold"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:text="Address"
            android:layout_marginBottom="6dp"/>

</RelativeLayout>