<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="20dp"
              android:textSize="25sp"
              android:text="Sort By: "
              android:gravity="center"/>

    <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

        <RadioButton
                android:id="@+id/show_by_distance"
                android:layout_weight=".8"
                android:gravity="center"
                android:paddingTop="@dimen/sort_padding"
                android:paddingBottom="@dimen/sort_padding"
                android:layout_marginStart="10dp"/>

        <TextView
                android:id="@+id/show_by_distance_text_view"
                android:layout_weight=".2"
                android:text="Distance"
                android:textSize="20sp"
                android:paddingTop="@dimen/sort_padding"
                android:paddingBottom="@dimen/sort_padding"
                android:gravity="center"/>
    </TableRow>

    <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <RadioButton
                android:id="@+id/show_by_time"
                android:layout_marginStart="10dp"
                android:paddingTop="@dimen/sort_padding"
                android:paddingBottom="@dimen/sort_padding"
                android:layout_weight=".8"
                android:gravity="center"/>

        <TextView
                android:id="@+id/show_by_time_text_view"
                android:layout_weight=".2"
                android:text="Commute Time"
                android:textSize="20sp"
                android:paddingTop="@dimen/sort_padding"
                android:paddingBottom="@dimen/sort_padding"
                android:gravity="center"/>
    </TableRow>

</LinearLayout>