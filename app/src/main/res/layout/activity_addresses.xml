<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <!--TODO: check api for elevation-->

    <fragment android:id="@+id/fragment"
              app:layout_behavior="@string/appbar_scrolling_view_behavior"
              android:name="com.example.sammengistu.nearest.fragments.AddressesListFragment"
              android:layout_marginTop="?actionBarSize"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:layout="@layout/fragment_list_addresses"/>

    <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:gravity="start"
            android:elevation="4dp">

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/app_name"
                  android:textSize="20sp"
                  android:layout_marginStart="30dp"
                  android:textColor="@color/white_color"/>

        <ImageView android:id="@+id/show_map_icon"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/maps_icon_copy"
                   android:layout_gravity="end"
                   android:layout_marginEnd="16dp"
                   android:contentDescription="@string/show_map_icon"/>

    </android.support.v7.widget.Toolbar>


</FrameLayout>

